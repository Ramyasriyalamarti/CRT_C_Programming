#include <stdio.h>
int main() {
    int n,p=0,u=0;
    scanf("%d",&n);
    for(int i=0;i<n;i++)
    {
        int e;
        scanf("%d",&e);
        if(e==-1)
        {
            if(p>0)
            {
                p--;
            }
            else
            {
                u++;
            }
        }
        else
        {
            p=p+e;
        }
    }
    printf("%d",u);
    return 0;
}
